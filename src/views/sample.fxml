<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Controller">
   <children>
      <GridPane alignment="center" hgap="10" vgap="10">
</GridPane>
      <Label layoutX="300.0" layoutY="35.0" text="Card Display" textAlignment="CENTER">
         <font>
            <Font name="Arial Rounded MT Bold" size="36.0" />
         </font>
      </Label>
      <VBox layoutX="59.0" layoutY="144.0">
         <children>
            <Label fx:id="faceNameLabel" text="Face Name:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="suitLabel" text="Suit:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="valueLabel" text="Value:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button layoutX="69.0" layoutY="288.0" mnemonicParsing="false" onAction="#dealTopCard" text="Deal Top Cards">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
